<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/to_user_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/user_profile_photo"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/to_user_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_for_user_message"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:background="@drawable/rounded_edittext_register"
        app:layout_constraintBottom_toBottomOf="@+id/to_user_imageView"
        app:layout_constraintStart_toEndOf="@+id/to_user_imageView"
        app:layout_constraintTop_toTopOf="@+id/to_user_imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>